<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registertokens.RegisterTokenFragment">

    <Button
        android:id="@+id/bt_register_token"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="150dp"
        android:text="Adicionar"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_clear"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="150dp"
        android:text="Limpar"
        android:textStyle="bold"
        android:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edt_cash_value"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="R$ 0,00"
        android:inputType="numberDecimal"
        android:maxLength="12"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_cash_one"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:longClickable="true"
        android:maxLength="3"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_register_token"
        app:layout_constraintEnd_toStartOf="@+id/edt_cash_two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_cash_value" />

    <EditText
        android:id="@+id/edt_cash_two"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:longClickable="true"
        android:maxLength="3"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/edt_cash_four"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edt_cash_one"
        app:layout_constraintTop_toTopOf="@+id/edt_cash_one" />

    <EditText
        android:id="@+id/edt_cash_four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:longClickable="true"
        android:maxLength="3"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/edt_cash_five"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edt_cash_two"
        app:layout_constraintTop_toTopOf="@+id/edt_cash_one" />

    <EditText
        android:id="@+id/edt_cash_five"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:longClickable="true"
        android:maxLength="3"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/edt_cash_six"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edt_cash_four"
        app:layout_constraintTop_toTopOf="@+id/edt_cash_one" />

    <EditText
        android:id="@+id/edt_cash_six"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:longClickable="true"
        android:maxLength="3"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/edt_cash_eight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edt_cash_five"
        app:layout_constraintTop_toTopOf="@+id/edt_cash_one" />

    <EditText
        android:id="@+id/edt_cash_eight"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:longClickable="true"
        android:maxLength="3"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/edt_cash_ten"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edt_cash_six"
        app:layout_constraintTop_toTopOf="@+id/edt_cash_one" />

    <EditText
        android:id="@+id/edt_cash_ten"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:clickable="true"
        android:cursorVisible="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:longClickable="true"
        android:maxLength="3"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/edt_cash_eight"
        app:layout_constraintTop_toTopOf="@+id/edt_cash_one" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 1,00"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edt_cash_one"
        app:layout_constraintEnd_toEndOf="@+id/edt_cash_one"
        app:layout_constraintStart_toStartOf="@+id/edt_cash_one" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 2,00"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edt_cash_two"
        app:layout_constraintEnd_toEndOf="@+id/edt_cash_two"
        app:layout_constraintStart_toStartOf="@+id/edt_cash_two" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 4,00"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edt_cash_four"
        app:layout_constraintEnd_toEndOf="@+id/edt_cash_four"
        app:layout_constraintStart_toStartOf="@+id/edt_cash_four" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 5,00"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edt_cash_five"
        app:layout_constraintEnd_toEndOf="@+id/edt_cash_five"
        app:layout_constraintStart_toStartOf="@+id/edt_cash_five" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 6,00"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edt_cash_six"
        app:layout_constraintEnd_toEndOf="@+id/edt_cash_six"
        app:layout_constraintStart_toStartOf="@+id/edt_cash_six" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 8,00"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edt_cash_eight"
        app:layout_constraintEnd_toEndOf="@+id/edt_cash_eight"
        app:layout_constraintStart_toStartOf="@+id/edt_cash_eight" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 10,00"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edt_cash_ten"
        app:layout_constraintEnd_toEndOf="@+id/edt_cash_ten"
        app:layout_constraintStart_toStartOf="@+id/edt_cash_ten" />

    <ImageView
        android:id="@+id/bt_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>