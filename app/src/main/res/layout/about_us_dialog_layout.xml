<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="30dp"
    android:background="@color/cardview_dark_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_about_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/about_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/tv_website_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="www.seviin.com.br"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tv_email_about"
            app:layout_constraintStart_toEndOf="@+id/img_email_about"
            app:layout_constraintTop_toBottomOf="@+id/tv_telephone_about"
            app:layout_constraintVertical_bias="0.492" />

        <ImageView
            android:id="@+id/img_email_about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_email_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv_website_about"
            app:layout_constraintStart_toStartOf="@+id/img_website_about"
            app:layout_constraintTop_toTopOf="@+id/tv_website_about"
            app:layout_constraintVertical_bias="0.441">

        </ImageView>

        <ImageView
            android:id="@+id/img_website_about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/baseline_desktop_windows_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv_email_about"
            app:layout_constraintEnd_toStartOf="@+id/tv_email_about"
            app:layout_constraintTop_toTopOf="@+id/tv_email_about"
            app:layout_constraintVertical_bias="0.617">

        </ImageView>

        <TextView
            android:id="@+id/tv_telephone_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="32dp"
            android:text="(19) 9 9889-3843"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_telephone_about"
            app:layout_constraintTop_toTopOf="@+id/img_about_logo" />

        <TextView
            android:id="@+id/tv_email_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="32dp"
            android:text="contato@seviin.com.br"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_about_logo"
            app:layout_constraintEnd_toStartOf="@+id/img_about_logo" />

        <ImageView
            android:id="@+id/img_telephone_about"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_call_24"
            app:layout_constraintBottom_toBottomOf="@+id/tv_telephone_about"
            app:layout_constraintStart_toStartOf="@+id/img_email_about"
            app:layout_constraintTop_toTopOf="@+id/tv_telephone_about"
            app:layout_constraintVertical_bias="0.441">

        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>