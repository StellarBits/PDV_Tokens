<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@drawable/progress_hud_bg"
    android:alpha="@dimen/progress_background_alpha"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/progress_background_horizontal_padding"
    android:paddingTop="@dimen/progress_background_vertical_padding"
    android:paddingRight="@dimen/progress_background_horizontal_padding"
    android:paddingBottom="@dimen/progress_background_vertical_padding">

    <ImageView
        android:id="@+id/spinnerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/progress_loading_imageview_bottom_margin"
        android:background="@drawable/spinner" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Message"
        android:textColor="@color/white" />

</LinearLayout>
